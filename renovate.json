{
  "semanticCommits": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    },
    {
      "matchPackageNames": ["semantic-release"],
      "semanticCommitType": "build"
    }
  ],
  "extends": [
    "config:base"
  ]
}
